  <div class="row">
    <div class="col-lg-12 well">
      <h4><%= link_to review.chef.chefname, chef_path(review.chef) %></h4>
      <p><strong><%= review.summary %></strong></p>
      <hr/>
      <p><%= review.description %></p>
      <div class="row">
        <% if current_user.present? && (current_user.admin? or current_user.id == review.chef_id) %>
          <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "Confirm delete?" }, class: "btn btn-warning btn-small" %>
          <%= link_to "Edit Review", edit_review_path(review), class: "btn btn-success" %>
          
        <% end %>
      </div>
        <span class='quiet'><small>Created: <%= time_ago_in_words(review.created_at) %> ago, </small></span>
        <span class='quiet'><small>Updated: <%= time_ago_in_words(review.updated_at) %> ago</small></span>
      </p>
    </div>
  </div>    
